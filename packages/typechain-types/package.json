{
  "name": "@c-forge/typechain-types",
  "version": "0.2.4",
  "publishConfig": {
    "access": "public"
  },
  "description": "Types and utility function for TypeChain",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c-forge/typechain-polkadot.git"
  },
  "author": "c-forge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/c-forge/typechain-polkadot/issues"
  },
  "scripts": {
    "lint": "pnpm prettier --check && pnpm eslint",
    "lint:fix": "pnpm prettier --write && pnpm eslint --fix",
    "eslint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "prettier": "prettier \"**/*.{js,md,json}\"",
    "pretest": "cd ../.. && pnpm build",
    "build": "tsc --build .",
    "prepublishOnly": "pnpm build",
    "clean": "rimraf dist internal types *.{d.ts,js}{,.map} build-test tsconfig.tsbuildinfo"
  },
  "files": [
    "dist/src/",
    "dist/*.d.ts",
    "dist/*.js",
    "dist/*.js.map",
    "src/",
    "*.d.ts",
    "*.d.ts.map",
    "*.js",
    "*.js.map",
    "LICENSE",
    "README.md"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/c-forge/typechain-polkadot#readme",
  "dependencies": {
    "@polkadot/api": "^10.12.4",
    "@polkadot/api-contract": "^10.12.4",
    "@polkadot/keyring": "^12.6.2",
    "@polkadot/types": "^10.12.4",
    "@polkadot/types-codec": "^10.12.4",
    "@polkadot/util": "^12.6.2",
    "@types/bn.js": "^5.1.0",
    "@types/node": "^18.0.3",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "rimraf": "^3.0.2",
    "typescript": "^5.2.2"
  }
}